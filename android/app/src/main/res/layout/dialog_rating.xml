<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Your Order"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/orderNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_gravity="center" />

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0"
        android:progressTint="@color/warning"
        android:secondaryProgressTint="@color/divider" />

    <TextView
        android:id="@+id/ratingHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tap to rate"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_gravity="center" />

    <!-- Feedback Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/feedbackLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Share your feedback (optional)"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:counterEnabled="true"
        app:counterMaxLength="500">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/feedbackInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minLines="3"
            android:maxLines="5" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Quick Feedback Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/quickFeedbackChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast service"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean clothes"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendly staff"
                style="@style/Widget.Material3.Chip.Suggestion" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good value"
                style="@style/Widget.Material3.Chip.Suggestion" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Maybe Later"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit Rating"
            app:backgroundTint="@color/primary" />

    </LinearLayout>

</LinearLayout>
