<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/privacy_policy"
                style="@style/TitleLarge"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Updated: January 2026"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Information We Collect"
            style="@style/TitleMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We collect information you provide directly to us, such as when you create an account, submit a laundry order, or contact us for support. This includes:\n\n• Name and email address\n• Phone number\n• Hostel room number\n• Order preferences and history"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. How We Use Your Information"
            style="@style/TitleMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We use the information we collect to:\n\n• Process and deliver your laundry orders\n• Send you order updates and notifications\n• Respond to your comments and questions\n• Improve our services"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Information Sharing"
            style="@style/TitleMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We do not sell, trade, or otherwise transfer your personal information to outside parties. Your information is only shared with our laundry staff to process your orders."
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Data Security"
            style="@style/TitleMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction."
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Contact Us"
            style="@style/TitleMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you have any questions about this Privacy Policy, please contact us at support@laundrybuddy.com"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
